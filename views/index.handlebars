<div class="container">
    <div class="row">
        <div class="col-2 mx-auto">
            <h1>Let's Eat.</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-3 mx-auto">
            <img src="./assets/images/burger_clip.png"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h4>Ready to Eat</h4>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>{{burger_name}}
                            <button class="devour_action" data-id={{id}}>Devour it!</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-4">
            {{!-- empty spacer --}}
        </div>

        <div class="col-md-4">
            <h4>Devoured</h4>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>{{burger_name}}
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form action="#">
                <label>New burger: </label>
                <input type="text" name="burger_name" id="burger_name"/>
                <input type="submit" id="burger_action"/>
            </form>
        </div>
    </div>
</div>